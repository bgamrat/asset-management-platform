{
    "description": "asset-management-system",
    "name": "bgamrat/asset-management-system",
    "license": "proprietary",
    "type": "project",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.1.3",
        "doctrine/orm": "^2.5",
        "doctrine/doctrine-bundle": "^1.6",
        "doctrine/doctrine-cache-bundle": "^1.2",
        "symfony/framework-bundle": "^4.0",
        "symfony/monolog-bundle": "^3.2",
        "sensio/framework-extra-bundle": "^5.1",
        "incenteev/composer-parameter-handler": "^2.0",
        "symfony/security-bundle": "^4.0",
        "symfony/process": "^4.0",
        "twig/extensions": "^1.3",
        "symfony/security-csrf": "^3.0",
        "symfony/asset": "^4.0",
        "friendsofsymfony/rest-bundle": "^2.2",
        "stof/doctrine-extensions-bundle": "^1.2",
        "knplabs/knp-menu-bundle": "^2.0",
        "symfony/translation": "^4.0",
        "ext-iconv": "*",
        "symfony/expression-language": "^4.0",
        "symfony/serializer-pack": "*",
        "twbs/bootstrap": "^4.1",
        "symfony/dependency-injection": "^4.0",
        "symfony/yaml": "^4.0",
        "dunglas/doctrine-json-odm": "^0.1.1",
        "components/font-awesome": "^5.0",
        "symfony/flex": "^1.0",
        "symfony/orm-pack": "^1.0",
        "symfony/twig-bundle": "^4.0",
        "symfony/swiftmailer-bundle": "^3.2",
        "symfony/form": "^4.0",
        "symfony/validator": "^4.0",
        "friendsofsymfony/user-bundle": "^2.1",
        "symfony/web-link": "^4.0",
        "symfony/debug-pack": "*",
        "symfony/property-info": "^4.0",
        "composer/composer": "^1.6",
        "composer/ca-bundle": "^1.1",
        "symfony/maker-bundle": "^1.4",
        "symfony/webpack-encore-pack": "^1.0",
        "sensiolabs/security-checker": "^4.1",
        "symfony/templating": "^4.0",
        "symfony/requirements-checker": "^1.1",
        "jms/serializer-bundle": "^2.4",
        "api-platform/api-pack": "^1.1",
        "nelmio/cors-bundle": "^1.5"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "require-dev": {
        "doctrine/doctrine-fixtures-bundle": "^3.0",
        "symfony/browser-kit": "^4.0",
        "symfony/css-selector": "^4.0",
        "symfony/phpunit-bridge": "^4.0",
        "symfony/profiler-pack": "^1.0",
        "symfony/web-server-bundle": "^4.0",
        "symfony/dotenv": "^4.0"

    },
    "scripts": {
	"mvBootstrap": "cp -rf vendor/twbs/* assets/vendor;",
        "mvFontAwesome": "cp -rf vendor/components/font-awesome assets/vendor;",
        "rmAllJS": "rm -rf public/vendor/bootstrap/* public/vendor/fortawesome/*",
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "@mvBootstrap",
            "@mvFontAwesome"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "@mvBootstrap",
            "@mvFontAwesome"
        ],
        "post-package-uninstall": [
            "@rmAllJS"
        ],
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "security-checker security:check": "script",
            "requirements-checker": "script"
        }
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-bin-dir": "bin",
        "symfony-var-dir": "var",
        "symfony-web-dir": "web",
        "symfony-tests-dir": "tests",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml"
        }
    }
}
