{% if event.rentals is not empty %}
    <article class="event-rental-equipment">
        <h2>{{'common.rental'|trans}} {{'asset.equipment'|trans}}</h2>
        <table class="table table-striped table-condensed table-bordered">
            <thead>
                <tr>
                    <th>{{'asset.vendor'|trans}}</th>
                    <th>{{'asset.category'|trans}}</th>
                    <th>{{'common.quantity'|trans}}</th>
                    <th>{{'common.comment'|trans}}</th>
                </tr>
            </thead>
            <tbody>
                {% for re in event.rentals%}
                    <tr>
                        <td class="vendor">{{re.vendor.name}}</td>
                        <td class="category">{{re.category.fullName}}</td>
                        <td class="quantity">{{re.quantity}}</td>
                        <td class="comment">{{re.comment}}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </article>
{% endif %}