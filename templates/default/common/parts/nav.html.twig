<div id="navigation">
    {% if is_granted('ROLE_ADMIN') %}
        <b-navbar toggleable="md" type="light" variant="light">
            <b-navbar-toggle target="admin_nav_collapse"></b-navbar-toggle>
            <b-collapse is-nav id="admin_nav_collapse">
                {{ knp_menu_render('admin', {'template': 'common/parts/knp_menu.html.twig'}) }}
                <b-nav-form class="ml-auto">
                    <b-form-input size="sm" class="mr-sm-2" type="text" placeholder="Search" />
                    <b-button size="sm" class="my-2 my-sm-0" type="submit">Search</b-button>
                </b-nav-form>
                {{ knp_menu_render('user', {'template': 'common/parts/knp_menu.html.twig'}) }}
            </b-collapse>
        </b-navbar>
        {% if is_granted('ROLE_SUPER_ADMIN') %}
            <b-navbar toggleable="md" type="light" variant="warning">
                <b-navbar-toggle target="superadmin_nav_collapse"></b-navbar-toggle>
                <b-collapse is-nav id="superadmin_nav_collapse">
                    {{ knp_menu_render('superadmin', {'template': 'common/parts/knp_menu.html.twig'}) }}
                </b-collapse>
            </b-navbar>
        {% endif %}
    {% else %}
        <b-navbar toggleable="md" type="light" variant="light">
            <b-navbar-toggle target="user_nav_collapse"></b-navbar-toggle>
            <b-navbar-brand href="#">NavBar</b-navbar-brand>
            <b-collapse is-nav id="user_nav_collapse">
                {{ knp_menu_render('main', {'template': 'common/parts/knp_menu.html.twig'}) }}
                {{ knp_menu_render('calendar', {'template': 'common/parts/knp_menu.html.twig'}) }}
                {{ knp_menu_render('trailer', {'template': 'common/parts/knp_menu.html.twig'}) }}
                {{ knp_menu_render('user', {'template': 'common/parts/knp_menu.html.twig'}) }}
            </b-collapse>
        </b-navbar>
    {% endif %}
</div>