{% if event.clientEquipment is defined %}
    <article class="event-client-equipment">
        <h2>{{'common.client'|trans}} {{'asset.equipment'|trans}}</h2>
        <table class="table table-striped table-condensed table-bordered">
            <thead>
                <tr>
                    <th>{{'asset.category'|trans}}</th>
                    <th>{{'common.quantity'|trans}}</th>
                    <th>{{'common.comment'|trans}}</th>
                </tr>
            </thead>
            <tbody>
                {% for ce in event.clientEquipment%}
                    <tr>
                        <td class="category">{{ce.category.fullName}}</td>
                        <td class="quantity">{{ce.quantity}}</td>
                        <td class="comment">{{ce.comment}}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </article>
{% endif %}