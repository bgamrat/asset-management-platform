{% if event.timespans is not empty %}
    <article class="time-span">
        <table class="table table-striped table-condensed table-bordered">
            <thead>
                <tr>
                    <th>{{'common.type'|trans}}</th>
                    <th>{{'common.start'|trans}}</th>
                    <th>{{'common.end'|trans}}</th>
                    <th>{{'common.comment'|trans}}</th>
                </tr>
            </thead>
            <tbody>
                {% for time_span in event.timespans %}
                    <tr>
                        <td class="type">{{time_span.type.name}}</td>
                        <td class="start">{{time_span.start|date('D m/d h:m')}}</td>
                        <td class="end">{{time_span.end|date('D m/d h:m')}}</td>             
                        <td class="comment">{{time_span.comment}}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </article>
{% endif %}
