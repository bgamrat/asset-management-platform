{% extends 'base.html.twig' %}
{% import 'user/calendar/macros.html.twig' as macros %}

{% block title %}{{ 'common.calendar'|trans }}{% endblock %}

{% block body %}

    <div class="row">
        <div class="col right"><small>{{ date|date('m/d/Y') }}</small></div>
    </div>
    {% for i in 0..1 %}
        <b-row>
            {% for day in ['sun','mon','tues','wed','thu','fri','sat'] %}
                <b-col>
                    <b-card no-body title="{{ day|trans }}"
                            img-src="https://placekitten.com/180/100"
                            img-alt="Image"
                            img-top
                            style="min-width:calc(100%/7);"
                            tag="article"
                            class="mb-2">
                        <h4 slot="header">{{ day|trans }}</h4>
                        <b-card-body>
                            <p class="card-text">
                                {% if day == 'tues' %}
                                    Blah blah blah
                                {% endif %}
                            </p>
                        </b-card-body><b-card-footer>This is a footer</b-card-footer>
                    </b-card>
                </b-col>
            {% endfor %}
            <div class="w-100"></div>
        </b-row>
    {% endfor %}

    <div class="row events">
        {% for event in events %}
            <div class="col event">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <span class="start">{{ event.start|date('D m/d') }}</span>
                        {% if event.start != event.end %}
                            - <span class="end">{{ event.end|date('D m/d') }}</span>
                        {% endif %}
                        <h3 class="panel-title name {% if event.tentative %}tentative{% endif %} {% if event.canceled %}canceled{% endif %}">
                            <small>{{event.id}}</small>
                            <a target="_blank" href="{{url('app_common_event_view',{'id':event.id})}}">{{ event.name }}</a>
                        </h3>
                    </div>
                    <div class="panel-body">
                        {{ macros.display_event(event) }}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{%endblock%}
{% block modal_text %}
    <p>Calendar</p>
{% endblock %}


