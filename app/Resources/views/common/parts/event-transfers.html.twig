{% if transfers is not empty %}
    <article class="transfers">
        <p>{{'asset.transfers'|trans}}</p>
        <table class="table table-striped table-condensed table-bordered">
            <thead>
                <tr>
                    <th>{{'common.id'|trans}}</th>
                    <th>{{'common.status'|trans}}</th>
                    <th>{{'common.source'|trans}}</th>
                    <th>{{'common.destination'|trans}}</th>
                    <th>{{'common.carrier'|trans}}</th>
                    <th>{{'common.carrier_service'|trans}}</th>
                    <th>{{'common.items'|trans}}</th>
                </tr>
            </thead>
            <tbody>
                {% set first = true %}
                {% set last_transfer_id = null %}
                {% for transfer in transfers %}
                    {% if transfer.id != last_transfer_id %}
                        {% if first == false %}
                            close</td></tr>
                            {% set first = false %}
                        {% endif %}
                    <tr>
                        <td class="id">{{transfer.id}}</td>
                        <td class="status">{{transfer.status|trans}}</td>
                        <td class="source-location">{{transfer.source_location_text|nl2br}}</td>
                        <td class="destination-location">{{transfer.destination_location_text|nl2br}}</td>
                        <td class="carrier">{{transfer.carrier}}</td>
                        <td class="carrier-server">{{transfer.carrier_service}}</td>
                        <td class="barcode">
                        {% set last_transfer_id = transfer.id %}
                    {% endif %}
                    {{transfer.barcode}} {{transfer.brand}} {{transfer.model}}<br>
                    
                {% endfor %}
                    </td>
                </tr>
            </tbody>
        </table>
    </article>
{% endif %}