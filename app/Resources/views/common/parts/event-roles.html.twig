{% if event.roles is not empty %}
    <article class="time-span">
        <table class="table table-striped table-condensed table-bordered">
            <thead>
                <tr>
                    <th>{{'common.person'|trans}}</th>
                    <th>{{'common.role'|trans}}</th>
                    <th>{{'common.start'|trans}}</th>
                    <th>{{'common.end'|trans}}</th>
                    <th>{{'common.comment'|trans}}</th>
                </tr>
            </thead>
            <tbody>
                {% for role in event.roles %}
                    <tr>
                        <td class="type">{{role.person.fullName}}</td>
                        <td class="role">{{role.role.name}}</td>
                        <td class="start">{{role.start|date('D m/d h:m')}}</td>
                        <td class="end">{{role.end|date('D m/d h:m')}}</td>
                        <td class="comment">{{role.comment}}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </article>
{% endif %}
