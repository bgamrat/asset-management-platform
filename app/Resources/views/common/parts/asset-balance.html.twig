{% if asset_balance is not empty %}
    <p>{{'asset.balance_note'|trans}}</p>
    <ul class="list-unstyled">
        {% for category_quantity in asset_balance %}
            {% if category_quantity.quantity != 0 %}
                <li>
                    <span class="category">{{category_quantity.category.fullName}}</span>
                    <span class="quantity{% if category_quantity.quantity > 0 %} deficit{% endif %}">
                        {{category_quantity.quantity|abs}}
                    </span>
                </li>
            {% endif %}
        {% endfor %}
    </ul>
{% endif %}