{% block title %}{{ event.name }} {{'common.equipment'|trans }}{% endblock %}

{% extends 'admin.base.html.twig' %}

{% block stylesheets %}
    {% stylesheets
            '@admin_client_css'
            filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block admin_content %}
    <div id="event-equipment-wrapper">
        <h1>{{ block ('title') }}</h1>
        <div class="event">
            <div class="event-data">
                <!--div class="name-value-active">
                    <span class="event name">
                        {{event.name}}
                    </span>
                    <span class="event active">
                        {% if event.active %}
                            {{'common.active'|trans}}
                        {% else %}
                            {{'common.not_active'|trans}}
                        {%endif%}
                    </span>
                </div-->
                <div class="description">
                    <!--div class="label">{{'common.description'|trans}}</div-->
                    {{event.description}}
                </div>
            </div>
            <section>
                {% if equipment is not empty %}
                    <article class="event equipment">
                        <h2>{{'common.available'|trans}} {{'asset.equipment'|trans}}</h2>
                        <ul class="available-list">
                            {% for category in equipment %}
                                <li class="justify">
                                    <span class="category">{{category.fullName}}</span>
                                    <span class="quantity">{{category.quantity}}</span>
                                </li>
                            {% endfor %}
                        </ul>
                    </article>
                {% endif %}
            </section>
        </div>
    </div>
{% endblock %}