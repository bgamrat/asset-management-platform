{% block title %}{{ 'common.role'|trans }} {{ 'common.type'|trans}}{% endblock %}
{% extends 'admin.base.html.twig' %}

{% form_theme role_types_form _self %}

{% block _role_types_types_entry_row %}
    {% spaceless %}
        <div class="form-row type">
            <span class="id">{{ form_widget(form.id) }}</span>
            <span class="type">{{ form_widget(form.type) }}</span>
            <span class="comment">{{ form_widget(form.comment) }}</span>
            <span class="active">{{ form_widget(form.active) }}</span>
            {% if form.parent.vars.allow_delete %}
                <span class="remove-form-row" title="{{'common.remove'|trans}}"><i id="type_{{form.vars.name}}" class="fa fa-remove"></i></span>
            {% endif %}
        </div>
    {% endspaceless %}

{% endblock %}

{% block admin_content %}
    <div id="type-type-wrapper">
        <h1>{{ block ('title') }}</h1>
        <div class="types">
            {% for flash_message in app.session.flashBag.get('notice') %}
                <div class="flash-notice">
                    {{ flash_message|trans }}
                </div>
            {% endfor %}
            {% if not role_types_form.vars.valid %}
                <div class="form-errors types">
                    {% for type in role_types_form.types %}
                        {% if not type.vars.valid %}
                            {{form_errors(type.name)}}
                        {% endif %}
                    {% endfor %}
                </div>
            {% endif %}
            {{form_start(role_types_form)}}
            <div class="text-right">
                <button id="types-save-btn" type="submit">{{ 'common.save'|trans }}</button>
            </div>
            <div class="form-row header">
                <span class="name">{{ 'common.name'|trans }}</span>
            </div>
            <div id="type-form">
                {{form_row(role_types_form)}}
                {% for type in role_types_form.types %}
                    {{form_row(type)}}
                {% endfor %}

                {% if role_types_form.types.vars.allow_add %}
                    <span class="add-one-more-row">{{ 'common.add_one_more'|trans}}</span>
                {% endif %}
                {{form_end(role_types_form)}}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        require(["app/admin/staff/role_type"], function (type) {
            type.run();
        });
    </script>
{% endblock %}