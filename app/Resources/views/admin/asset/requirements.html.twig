{# empty Twig template #}
{% block title %}{{ 'asset.requirement'|trans }} {{'common.admin'|trans }}{% endblock %}
{% extends 'admin.base.html.twig' %}

{% block admin_content %}
    <div id="requirement-wrapper">
        <h1>{{ 'asset.requirements'|trans }} {{'common.admin'|trans }}</h1>
        <div class="grid-controls">
            <div>
                <button id="requirement-new-btn" type="button">{{ 'common.new'|trans }}</button>
            </div>
            <div>
                <form id="requirement-grid-filter-form">
                    <label for="filter-input">{{ 'common.filter'|trans }}</label><input type="text" id="requirement-filter-input">
                </form>
            </div>
            <button id="requirement-remove-btn" type="button">{{ 'common.remove'|trans }}</button>
        </div>
        <div id="requirement-grid">
        </div>
        <div id="requirement-view-dialog">
            {{form_start(requirement_form)}}
                <fieldset class="inline-block">
                    <legend>{{'asset.requirement'|trans}}</legend>
                    <div class="justify">
                        {{form_row(requirement_form.name)}}
                        {{form_row(requirement_form.active,{'attr': {'class': 'single-cb'}})}}
                    </div>
                </fieldset>
            {{ form_end(requirement_form) }}
            <div class="center">
                <button id="requirement-save-btn" type="button">{{ 'common.save'|trans }}</button>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        require(["app/admin/requirement"], function (requirement) {
            requirement.run();
        });
    </script>
{% endblock %}