{% block title %}{{ 'common.schedule'|trans }} {{'common.admin'|trans }}{% endblock %}

{% extends 'admin.base.html.twig' %}

{% block stylesheets %}
    {% stylesheets 
            '@admin_schedule_css'
            filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% form_theme event_form _self %}

{% block _event_contacts_entry_row %}
    <div class="form-row contacts">
        {% include 'common/person.html.twig' with {'legend': 'common.contact'} %}
    </div>
{% endblock %}

{% block _event_contacts_entry_addresses_entry_row %}
    {{ block('_address_entry_row') }}
{% endblock %}

{% block _event_contacts_entry_emails_entry_row %}
    {{ block('_emails_entry_row') }}
{% endblock %}

{% block _event_contacts_entry_phones_entry_row %}
    {{ block('_phones_entry_row') }}
{% endblock %}

{% block _client_events_entry_row %}{% spaceless %}
        <div class="form-row event">
            <div class="event-id">
                <span class="id">{{ form_widget(form.id) }}</span>
                <span class="name">{{ form_widget(form.name) }}</span>
                <span class="comment">{{ form_widget(form.comment) }}</span>
                <span class="active">{{ form_widget(form.active) }}</span>
                {% if form.parent.vars.allow_delete is defined %}
                    <span class="remove-form-row" title="{{'common.remove'|trans}}" id="event-__event__"><i class="fa fa-remove"></i></span>
                    {% endif %}
            </div>
            <div class="details justify">
                {{form_row(form.start)}}
                {{form_row(form.end)}}
                {{form_row(form.value)}}
            </div> 
        </div>
{% endspaceless %}{% endblock %}

{% block admin_content %}
    <div id="client-wrapper">
        <h1>{{ 'client.client'|trans }} {{'common.admin'|trans }}</h1>
        <div class="grid-controls">
            <div>
                <button id="client-new-btn" type="button">{{ 'common.new'|trans }}</button>
            </div>
            <div>
                <form id="client-grid-filter-form">
                    <label for="filter-input">{{ 'common.filter'|trans }}</label><input type="text" id="client-filter-input">
                </form>
            </div>
            <button id="client-remove-btn" type="button">{{ 'common.remove'|trans }}</button>
        </div>
        <div id="client-grid">
        </div>
        <div id="client-view-dialog">
            {{form_start(client_form)}} 
            <div class="text-right">
                <button id="client-save-btn" type="button">{{ 'common.save'|trans }}</button>
            </div>
            <div class="client">
                <fieldset class="name-active">
                    <legend>{{'client.client'|trans}}</legend>
                    <div class="justify">
                        <span class="client-name">
                            {{form_widget(client_form.name)}}
                        </span>
                        <span class="client-active">
                            {{form_widget(client_form.active)}}
                            {{form_label(client_form.active)}}
                        </span>
                    </div>
                    {{form_row(client_form.comment)}}
                </fieldset>
                <div id="client-view-tabs">
                    <div id="client-view-contacts-tab">
                        <fieldset class="contacts">
                            {{form_row(client_form.contacts)}}
                            {% if client_form.contacts.vars.allow_add %}
                                <span class="add-one-more-row">{{ 'common.add_one_more'|trans}}</span>
                            {% endif %}
                        </fieldset>
                    </div>
                    <div id="client-view-events-tab">
                        <fieldset class="events">
                            <legend>{{'client.events'|trans}}</legend>
                            {{form_row(client_form.events)}}
                            {% if client_form.events.vars.allow_add %}
                                <span class="add-one-more-row">{{ 'common.add_one_more'|trans}}</span>
                            {% endif %}
                        </fieldset>
                    </div>
                    <div id="client-view-history-tab">
                    </div>
                </div>
            </div>
            {{ form_end(client_form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        require(["app/admin/client/client"], function (client) {
            client.run();
        });
    </script>
{% endblock %}