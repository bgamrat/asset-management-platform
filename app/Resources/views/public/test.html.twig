{% block title %}{{ 'common.test'|trans }}{% endblock %}
{% extends '/admin.base.html.twig' %}

{% block admin_content %}

    <h1>{{ block ('title') }}</h1>

    <button id="test-btn">Test</button>

    {#% javascripts '@test_js' %}
    <script data-dojo-config="async:true"
    src="{{ asset_url }}"></script>
    {% endjavascripts %#}



{% endblock %}  
{% block page_js %}
    {% if app.environment == 'prod' %}
        {% for js_file in js %}
            <script
            src="{{js_file}}"></script>
        {% endfor %}
    {% endif %}
    {% for name, js_file in js %}
    <script>
        require(["dojo/ready","app/{{name}}"], function (ready,test) {
            ready(function(){ {{name}}.run();});
        });
    </script>
    {% endfor %}
{% endblock %}
